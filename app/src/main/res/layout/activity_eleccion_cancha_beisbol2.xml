<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#C8C8C7" >

    <androidx.coordinatorlayout.widget.CoordinatorLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/coordinatorLayout"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="18dp"
      app:layout_constraintTop_toTopOf="parent">

      <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegresar"
        app:borderWidth="0dp"
        android:src="@drawable/regresar"
        android:backgroundTint="#C8C8C7"
        android:layout_gravity="start">

      </com.google.android.material.floatingactionbutton.FloatingActionButton>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <TextView
      android:id="@+id/lblActividades"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:text="Actividades"
      android:textColor="@color/black"
      android:textSize="25sp"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginStart="75dp"
      app:layout_constraintStart_toEndOf="@id/coordinatorLayout"
      app:layout_constraintTop_toTopOf="parent" />


  </androidx.constraintlayout.widget.ConstraintLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical" >

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/lblActividadAConsultar"
      android:text="Actividad a consultar:"
      android:layout_marginVertical="4dp"
      android:textColor="@color/black"
      android:textSize="25sp"
      android:textStyle="bold" >

    </TextView>

    <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="130dp"
      app:cardBackgroundColor="#8A2EFF"
      app:cardCornerRadius="28dp"
      android:layout_marginVertical="8dp"
      android:id="@+id/btnRayosUV" >

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/rayosuv"
          android:layout_gravity="center"
          android:layout_marginHorizontal="15dp"
          android:id="@+id/imgRayosUV" >

        </ImageView>

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/lblRayosUV"
          android:layout_marginHorizontal="15dp"
          android:text="Nivel de\nRayos UV"
          android:layout_gravity="center"
          android:textStyle="bold"
          android:textSize="25sp"
          android:textAlignment="center"
          android:textColor="@color/white" >

        </TextView>

      </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="130dp"
      app:cardBackgroundColor="#FFEB66"
      app:cardCornerRadius="28dp"
      android:layout_marginVertical="8dp"
      android:id="@+id/btnTemperatura" >

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/temperatura"
          android:layout_gravity="center"
          android:layout_marginHorizontal="15dp"
          android:id="@+id/imgTemperatura" >

        </ImageView>

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/lblTemperatura"
          android:layout_marginHorizontal="15dp"
          android:text="Nivel de\nTemperatura"
          android:layout_gravity="center"
          android:textStyle="bold"
          android:textSize="25sp"
          android:textAlignment="center"
          android:textColor="@color/black" >

        </TextView>

      </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="130dp"
      app:cardBackgroundColor="#2B6831"
      app:cardCornerRadius="28dp"
      android:layout_marginVertical="8dp"
      android:id="@+id/btnHumedad" >

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/humedad"
          android:layout_gravity="center"
          android:layout_marginHorizontal="15dp"
          android:id="@+id/imgHumedad" >

        </ImageView>

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/lblHumedad"
          android:layout_marginHorizontal="15dp"
          android:text="Nivel de\nHumedad"
          android:layout_gravity="center"
          android:textStyle="bold"
          android:textSize="25sp"
          android:textAlignment="center"
          android:textColor="@color/white" >

        </TextView>

      </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="130dp"
      app:cardBackgroundColor="#16339B"
      app:cardCornerRadius="28dp"
      android:layout_marginVertical="8dp"
      android:id="@+id/btnLluvia" >

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/lluvia"
          android:layout_gravity="center"
          android:layout_marginHorizontal="15dp"
          android:id="@+id/imgLluvia" >

        </ImageView>

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/lblLluvia"
          android:layout_marginHorizontal="15dp"
          android:text="Nivel de\nLluvia"
          android:layout_gravity="center"
          android:textStyle="bold"
          android:textSize="25sp"
          android:textAlignment="center"
          android:textColor="@color/white" >

        </TextView>

      </LinearLayout>

    </androidx.cardview.widget.CardView>

  </LinearLayout>


</LinearLayout>

